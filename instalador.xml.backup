                            <show>0</show>
                            <variable>previous_release_unninstaller</variable>
                        </registryGet>
                        <setInstallerVariableFromRegEx>
                            <name>previous_release_unninstaller</name>
                            <pattern>"</pattern>
                            <progressText>Procurando por versões anteriores do Portugol Studio</progressText>
                            <substitution></substitution>
                            <text>${previous_release_unninstaller}</text>
                        </setInstallerVariableFromRegEx>
                        <runProgram>
                            <program>${previous_release_unninstaller}</program>
